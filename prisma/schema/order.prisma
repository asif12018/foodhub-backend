model Order {
  id              Int         @id @default(autoincrement())
  mealId          String
  mealName        String
  status          OrderStatus @default(PREPARING)
  price           Float
  discountPrice Float?
  quantity        Int
  totalPrice      Float
  deliveryAddress String?

  meal Meals @relation(fields: [mealId], references: [id])

  provider_id String
  customer_id String

  provider User @relation("ProviderOrders", fields: [provider_id], references: [id])
  customer User @relation("CustomerOrders", fields: [customer_id], references: [id])
}

enum OrderStatus {
  PREPARING
  READY
  CANCELLED
}
